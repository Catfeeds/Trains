/* pages/mine/index.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

.userinfo {
  background: #fff;
  padding: 80rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}

.content {
  background: #fff;
  margin-top: 60rpx;
}

.content view {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
}

.signUp {
  border: 1px solid #f5f5f5;
}

.text{
  background: #ccc;
  border: 1px solid #ccc;
}

.arrow{
  position: absolute;
  right: 20px;
  top:20px;
  width:8px;
  height: 8px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);

}

.size{
  font-weight: normal;
  font-size: 32rpx;
}
button[type=primary]{
background-color:#fff;
color:#000;
border:0 none;
outline:0 none;
border-radius:0 none;
width:100%;
text-align:left;
padding-left:0;
border-color:#fff;
}
button::after{
border:none;
}

.left{
  float: left;
}

.right{
  float: right;
}